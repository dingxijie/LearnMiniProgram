<!--pages/text/text.wxml-->
<!-- 内置组件text,类似于html中的span便签，是行内元素，不会换行。换行用\n -->
<!--1. 基本使用-->
<text>Hello World\n</text>
<text>HI，小程序\n</text>

<!--2.默认情况下text中的文本长按是不能选中的，需要使用selectable:true -->
<text selectable="{{true}}">你好, DJ\n</text>
<text selectable>你好, DJ\n</text>

<!--3.space属性 决定文本空格的大小-->
<text>Hello World\n</text>
<!-- nbsp根据字体设置的空格大小 -->
<text space="nbsp">Hello World\n</text>
<!-- ensp中文字符空格一半大小 -->
<text space="ensp">Hello World\n</text>
<!-- emsp一个中文字符大小 -->
<text space="emsp">Hello World\n</text>

<!-- 4. decode属性 是否解码文本 -->
<text decode='{{true}}'>5 &gt; 3\n</text>
<text decode>5 &gt; 3\n</text>
